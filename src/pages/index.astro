---
import BlogPost from '@components/BlogPost.astro'
import MainLayout from '@layouts/MainLayout.astro'
import { getCollection } from 'astro:content';

const blogPosts = await getCollection("blog", (post) => post.data.esBorrador === false);
---

<MainLayout title="Blog de Sivi">
	<section class="bg-white dark:bg-gray-900">
		<div class="container px-6 py-10 mx-auto">
			<h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">Blog de Sivi</h1>

			<div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
				{ blogPosts.map( (post) => <BlogPost post={post} /> ) }
			</div>
		</div>
	</section>
</MainLayout>